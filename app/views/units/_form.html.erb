      <ul>
      <% @unit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :army_id %><br>
    <%= f.select :army_id, options_from_collection_for_select(Army.all(), :id, :name, selected: @unit.army_id) %>
  </div>
  <div class="field">
    <%= f.label :organisation_id %><br>
    <%= f.select :organisation_id, options_from_collection_for_select(Organisation.all(), :id, :name, selected: @unit.organisation_id), include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :introduced_id %><br>
    <%= f.select :introduced_id, options_from_collection_for_select(Edition.all(), :id, :name, selected: @unit.introduced_id) %>
  </div>
  <div class="field">
    <%= f.label :outmodded_id %><br>
    <%= f.select :outmodded_id, options_from_collection_for_select(Edition.all(), :id, :name, selected: @unit.outmodded_id), include_blank: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
